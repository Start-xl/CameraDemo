/* 1. 基础状态：未获焦、未禁用 */
QLineEdit {
    /* 背景渐变：与 QComboBox 基础背景一致，避免单调 */
    background-color: QLinearGradient(
        x1: 0, y1: 0,
        x2: 0, y2: 1,
        stop: 0 #4d4d4d,
        stop: 0.5 #484848,
        stop: 1 #434343
    );
    /* 边框：深色细边框，与 QPushButton 边框色统一 */
    border: 1px solid #1e1e1e;
    border-radius: 5px; /* 与原文件 QLineEdit 圆角保持一致 */
    /* 内边距：避免文字紧贴边框，提升输入体验 */
    padding: 4px 8px;
    /* 文本样式：匹配主题文本色和字体大小 */
    color: #b1b1b1;
    font-size: 15px;
    /* 选中文字样式：橙色背景+黑色文字，增强对比度 */
    selection-background-color: #ffa02f;
    selection-color: #000000;
}

/* 2. 获焦状态：突出交互反馈，与 QTextEdit 获焦逻辑一致 */
QLineEdit:focus {
    /* 渐变边框：复用 QComboBox  hover 边框渐变，强化焦点提示 */
    border: 2px solid QLinearGradient(
        x1: 0, y1: 0,
        x2: 0, y2: 1,
        stop: 0 #ffa02f,
        stop: 1 #d7801a
    );
    /* 背景微亮：获焦时轻微提亮背景，增强视觉层次 */
    background-color: QLinearGradient(
        x1: 0, y1: 0,
        x2: 0, y2: 1,
        stop: 0 #525252,
        stop: 0.5 #4d4d4d,
        stop: 1 #484848
    );
}

/* 3. 悬停状态：未获焦时的hover反馈，提升交互感知 */
QLineEdit:hover:!focus {
    border-color: #ffaa00; /* 主题浅橙色边框，与 QRadioButton hover 边框一致 */
    background-color: QLinearGradient(
        x1: 0, y1: 0,
        x2: 0, y2: 1,
        stop: 0 #505050,
        stop: 0.5 #4b4b4b,
        stop: 1 #464646
    );
}

/* 4. 禁用状态：与 QPushButton/QComboBox 禁用样式统一 */
QLineEdit:disabled {
    /* 背景压暗：比可用状态暗，区分禁用逻辑 */
    background-color: QLinearGradient(
        x1: 0, y1: 0,
        x2: 0, y2: 1,
        stop: 0 #404040,
        stop: 1 #383838
    );
    /* 文本和边框：统一暗灰色，避免视觉干扰 */
    color: #888888;
    border-color: #333333;
}

/* 5. 只读状态：区别于禁用，保留文本可读性 */
QLineEdit:read-only {
    background-color: QLinearGradient(
        x1: 0, y1: 0,
        x2: 0, y2: 1,
        stop: 0 #484848,
        stop: 0.5 #434343,
        stop: 1 #3e3e3e
    );
    color: #999999; /* 文本色比可用状态浅，区分只读属性 */
    border-color: #2a2a2a;
}

/* 6. 占位文本样式：适配深色背景，避免占位符过亮 */
QLineEdit::placeholder {
    color: #666666; /* 比正常文本暗，不干扰输入注意力 */
    font-style: italic; /* 轻微斜体，明确占位符属性 */
}

