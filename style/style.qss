/* 基础复选框样式：未选中/未禁用状态 */
QCheckBox {
    color: #b1b1b1; /* 与 QWidget 文本色一致 */
    font-size: 15px; /* 匹配输入控件字体大小 */
    spacing: 6px; /* 复选框与文本间距 */
    background-color: transparent;
}

/* 复选框指示器（方框核心）- 所有状态通用基础样式 */
QCheckBox::indicator {
    width: 16px; /* 正方形指示器 */
    height: 16px;
    border: 1px solid #b1b1b1; /* 未选中边框色 */
    border-radius: 3px; /* 与 QLineEdit 圆角统一 */
    background-color: #323232; /* 主背景色 */
    position: relative; /* 用于定位模拟对号的伪元素 */
}

/* 1. 未选中状态：仅基础方框 */
QCheckBox::indicator:!checked {
    border-color: #b1b1b1;
}

/* 2. 选中状态：方框+模拟对号（纯样式表实现） */
QCheckBox::indicator:checked {
    border-color: #ffaa00; /* 选中边框用主题橙色 */
}
/* 对号左半段：通过旋转的线性渐变模拟 */
QCheckBox::indicator:checked::indicator {
    /* 左半段对号：从左下到右上 */
    background:
        linear-gradient(45deg, transparent 45%, #ffa02f 45%, #ffa02f 55%, transparent 55%)
        no-repeat left bottom;
    background-position: 3px 6px; /* 对号在方框内的位置 */
}
/* 对号右半段：通过旋转的线性渐变模拟 */
QCheckBox::indicator:checked::indicator:indicator {
    /* 右半段对号：从左上到右下 */
    background:
        linear-gradient(135deg, transparent 45%, #ffa02f 45%, #ffa02f 55%, transparent 55%)
        no-repeat right top;
    background-position: 5px 4px;
}

/* 3. 半选中状态：橙色渐变填充（无对号） */
QCheckBox::indicator:indeterminate {
    border-color: #ffaa00;
    background-color: QLinearGradient(
        x1:0, y1:0, x2:1, y2:1,
        stop:0 #ffa02f, stop:1 #d7801a
    ); /* 与 QScrollBar 手柄渐变一致 */
}

/* 4. 悬停状态：边框高亮+背景微亮 */
QCheckBox::indicator:hover {
    border-color: #ffaa00; /* 主题橙色边框 */
    background-color: #3a3a3a; /* 背景轻微提亮 */
}

/* 5. 按下状态：边框深橙+背景压暗 */
QCheckBox::indicator:pressed {
    border-color: #d7801a; /* 深橙色边框 */
    background-color: #2d2d2d; /* 与 QPushButton 按下背景一致 */
}

/* 6. 禁用状态：文本+边框+对号统一变灰 */
QCheckBox:disabled {
    color: #404040; /* 禁用文本色 */
}
/* 禁用未选中：暗灰边框 */
QCheckBox::indicator:disabled:!checked {
    border-color: #404040;
    background-color: #323232;
}
/* 禁用选中：暗灰边框+灰对号 */
QCheckBox::indicator:disabled:checked {
    border-color: #404040;
    background-color: #323232;
}
QCheckBox::indicator:disabled:checked::indicator {
    background:
        linear-gradient(45deg, transparent 45%, #404040 45%, #404040 55%, transparent 55%)
        no-repeat left bottom;
    background-position: 3px 6px;
}
QCheckBox::indicator:disabled:checked::indicator:indicator {
    background:
        linear-gradient(135deg, transparent 45%, #404040 45%, #404040 55%, transparent 55%)
        no-repeat right top;
    background-position: 5px 4px;
}
/* 禁用半选中：暗灰边框+暗灰渐变 */
QCheckBox::indicator:disabled:indeterminate {
    border-color: #404040;
    background-color: QLinearGradient(
        x1:0, y1:0, x2:1, y2:1,
        stop:0 #404040, stop:1 #383838
    );
}
